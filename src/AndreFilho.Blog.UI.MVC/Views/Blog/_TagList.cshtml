@model  IEnumerable< AndreFilho.Blog.Application.ViewModel.TagViewModel>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Tags </strong>
    </div>

    @if ( Model.Any())
    {

        <table class="table table-hover">
            <tr>
               
               
            </tr>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>


                    <td style="width: 20%">

                        <a href="@Url.Action("DeleteTag", "Blog", new {  id = item.TagId})"   data-modal="" class="btn btn-danger right" id="removeTag" >
                            <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                        </a>

                    </td>
                </tr>



            }
        </table>

    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    Nenhuma Tag Cadastrada.
                </th>
            </tr>
        </table>
    }

</div>
