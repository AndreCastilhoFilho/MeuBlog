@model IEnumerable<AndreFilho.Blog.Application.ViewModel.CategoryViewModel>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Categories</strong>
    </div>
    <table class="table table-hover">
        <tr></tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td style="width: 20%">
                    <a href="@Url.Action("DeleteCategory", "Blog", new {  id = item.CategoryId})" data-modal="" class="btn btn-danger right" id="removeTag">
                        <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>